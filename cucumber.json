{
    "default": {
        "paths": [
            "tests/features/"
        ],
        "require": [
            "tests/steps/*.step.ts",
            "tests/support/**/*.ts",
            "ts-node/register"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ]
    }
}